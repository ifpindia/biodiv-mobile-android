<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <RelativeLayout android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg">
        <TextView android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/btn_edit"
            android:gravity="center_horizontal"
            android:textAppearance="@style/HeaderTextStyle"/>
        <!-- <Button android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="@string/edit"
            android:textColor="@color/header_title_text_color"
            android:textStyle="bold"
            android:background="@drawable/btn_selector"/> -->
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/header"
    	android:paddingBottom="8dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- <LinearLayout android:id="@+id/name_layout" 
                android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="6dp"
	            android:layout_marginRight="8dp">
            	<TextView android:id="@+id/common_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:textStyle="bold"
		            android:textColor="@color/list_item_name_text_color"/>
            	<TextView android:id="@+id/sci_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="4dp"
		            android:textSize="16sp"
		            android:autoLink="web"
		            android:clickable="true"
		            android:textColor="@drawable/text_selector"/>
            </LinearLayout> -->
            <LinearLayout android:id="@+id/table_layout" 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="12dp"
			    android:layout_marginLeft="8dp"
			    android:layout_marginRight="8dp"
			    android:background="@drawable/image_frame"
			    android:orientation="vertical">
			    <LinearLayout android:id="@+id/common_name_layout" 
			        android:layout_width="fill_parent"
			        android:layout_height="45dp"
			        android:orientation="horizontal"
			        android:weightSum="1.0"
			        android:background="@drawable/layout_selector">
			        <TextView android:id="@+id/common_name"
			            android:layout_width="0dp"
			            android:layout_height="fill_parent"
			            android:layout_weight="1.0"
			            android:gravity="center_vertical"
			            android:layout_marginLeft="8dp"
			           	android:textColor="@color/list_item_name_text_color"
			           	android:textSize="17sp"
			           	android:textStyle="bold"
			           	android:singleLine="true"
			           	android:ellipsize="end"/>    
			    </LinearLayout>
			    <View android:id="@+id/rule02"
		            android:layout_width="fill_parent"
		            android:layout_height="1dp"
		            android:background="@color/frame_brown_color"/>   
			    <LinearLayout android:id="@+id/sci_name_layout" 
			        android:layout_width="fill_parent"
			        android:layout_height="45dp"
			        android:orientation="horizontal"
			        android:weightSum="3.0"
			        android:clickable="true"
			        android:background="@drawable/layout_selector">
			        <TextView android:id="@+id/sci_name"
			            android:layout_width="0dp"
			            android:layout_height="fill_parent"
			            android:layout_weight="2.2"
			            android:gravity="center_vertical"
			            android:layout_marginLeft="8dp"
			           	android:textColor="@color/brown_color"
			           	android:textSize="17sp"
			           	android:textStyle="bold"
			           	android:singleLine="true"
			           	android:ellipsize="end"/>
			        <TextView android:id="@+id/more_info" 
			            android:layout_width="0dp"
			            android:layout_height="fill_parent"
			            android:layout_weight="0.8"
			            android:layout_marginRight="4dp"
			            android:gravity="center"
			            android:textSize="12sp"
			           	android:textColor="@color/list_item_name_text_color"
			           	android:textStyle="bold"/>    
			    </LinearLayout>
		    </LinearLayout>
            <LinearLayout android:id="@+id/pager_layout" 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_marginTop="10dp"
			    android:layout_marginLeft="8dp"
		        android:layout_marginRight="8dp"
			    android:layout_height="@dimen/bike_image_height">
			    <com.mobisys.android.ibp.widget.SmartViewPager
			        android:id="@+id/pager"
			        android:layout_width="fill_parent"
			        android:layout_height="0dp"
			        android:layout_weight="1"/>
			    <com.viewpagerindicator.CirclePageIndicator
			        android:id="@+id/indicator"
			        android:padding="10dip"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        app:fillColor="@color/list_item_name_text_color"
			        app:strokeColor="@android:color/white"/>
			</LinearLayout>
			<TextView android:id="@+id/label_submitted_by"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="Submitted By:"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/submitted_by"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@color/brown_color"/>
			<TextView android:id="@+id/label_place"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/place"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/place"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@color/brown_color"/>
			<TextView android:id="@+id/label_observed_on"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/observed_on"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/observed_on"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@color/brown_color"/>
			<TextView android:id="@+id/label_submitted"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/submitted"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/submitted"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@color/brown_color"/>
			<TextView android:id="@+id/label_updated"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/updated"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/updated"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@color/brown_color"/>
			<TextView android:id="@+id/label_notes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/notes"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/notes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@color/brown_color"/>   	    
        </LinearLayout>    
    </ScrollView>    
</RelativeLayout>
