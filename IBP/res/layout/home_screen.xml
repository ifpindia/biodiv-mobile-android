<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/storage_bg"
    android:paddingBottom="10dp">
    <RelativeLayout android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_above="@+id/view01"
    	android:gravity="center|center_horizontal">
		<Button android:id="@+id/btn_new_observation"
	        android:layout_width="140dp"
	        android:layout_height="100dp"
	        android:textColor="@android:color/white"
	        android:text="@string/new_observation"
	        android:textStyle="bold"
	        android:background="@drawable/app_btn"/>
		<Button android:id="@+id/btn_browse_observation"
	        android:layout_width="140dp"
	        android:layout_height="100dp"
	        android:layout_below="@id/btn_new_observation"
	        android:layout_marginTop="20dp"
	        android:textColor="@android:color/white"
	        android:text="@string/browse_obesrvation"
	        android:textStyle="bold"
	        android:background="@drawable/app_btn"/>
	</RelativeLayout>
	<View android:id="@+id/view01" 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/list_item_name_text_color"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/msg_incomplete_obs"/>
	<TextView android:id="@+id/msg_incomplete_obs"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:gravity="center_horizontal"
	     android:layout_above="@+id/btn_incomplete_observations"
	     android:text="@string/msg_incomplete_obs"
	     android:textColor="@android:color/white"
	     android:layout_marginLeft="8dp"
	     android:layout_marginRight="8dp"
	     android:layout_marginBottom="8dp"/>
    <Button android:id="@+id/btn_incomplete_observations"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	     android:text="@string/incomplete_obs"
	     android:textColor="@android:color/white"
	     android:layout_marginLeft="8dp"
	     android:layout_marginRight="8dp"
	     android:layout_marginTop="10dp"
	     android:background="@drawable/app_btn"/>
</RelativeLayout>
